<tr>
  <th class="persona__avatar"><%= render "icons/#{resource.provider.underscore}", classes: 'connection__icon' %></th>
  <th class="resource__name"><%= resource.name %><br><small><%= resource.provider %> <%= resource.external_type %></small></th>
  <th class="persona__email">
    <%= link_to resource.manage_url, class: 'icon persona__manage-link',
      target: :_blank, title: "Manage #{resource.name} in #{resource.provider}" do %>
      <%= render 'icons/gear', classes: 'persona__manage-icon' %>
    <% end %>
  </th>
</tr>
